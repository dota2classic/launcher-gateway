    "@nestjs/schedule": "^4.1.0",
    "@nestjs/websockets": "^10.4.1",
    "@ntegral/nestjs-sentry": "^1.0.4",
    "dotenv": "^8.2.0",
    "jwt-decode": "^3.0.0",
    "node-fetch": "^2.6.1",
